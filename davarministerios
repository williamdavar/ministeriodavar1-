    <!-- Script para navegacion tipo "Paginas Independientes" en un solo archivo -->
    <script>
        // Lista con los IDs de todas las secciones principales
        const secciones = ['inicio', 'quienes-somos', 'transmisiones', 'biblioteca', 'noticias', 'galeria'];

        function mostrarSeccion(idSeccion) {
            // Ocultar todas las secciones
            secciones.forEach(sec => {
                const elemento = document.getElementById(sec);
                if (elemento) {
                    elemento.style.display = 'none';
                }
            });
            
            // Mostrar solo la seccion que el usuario selecciono
            const seccionActiva = document.getElementById(idSeccion);
            if (seccionActiva) {
                seccionActiva.style.display = 'block';
            }

            // Hacer scroll hacia arriba al cambiar de seccion
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        // Al cargar la pagina, ejecutar la funcion para que solo se vea "inicio"
        window.onload = () => {
            mostrarSeccion('inicio');
        };
    </script>

